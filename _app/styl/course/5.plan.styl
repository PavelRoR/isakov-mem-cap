#plan
	padding 0 0 50px
.day
	margin 0 0 30px
	box-shadow: 0px 4px 5px 4px rgba(25, 24, 21, 0.1);
	padding 40px 430px 40px 40px
	position relative
	background-repeat no-repeat, no-repeat
	background-position: center right -5%
	background-size:  contain
	&-1
		background-image linear-gradient(to right, #fff 60%, transparent 100%), url(../img/images/day-img-1.jpg)
		background-position: center right -68%
	&-2
		background-image linear-gradient(to right, #fff 60%, transparent 100%), url(../img/images/day-img-2.jpg)
		background-position: center right -550%
	&-3
		background-image linear-gradient(to right, #fff 60%, transparent 100%), url(../img/images/day-img-3.jpg)
		background-position: center right -29%
	&-info-title
		font-size: 25px
		font-family: BSB
		margin: 0 0 20px
		text-transform: uppercase
		line-height: 1.4
.day-info-list
	list-style none
	li
		margin-bottom: 5px
.day-info-innerlist
	list-style none
.li-bonus
	font-family: AB
	margin-top: 20px
.day-info-list-2
	margin-top: 20px
	margin-left: 30px
	li
		font-size: 20px
		font-family: AB
		span
			font-family: A
			font-size: 18px
.day-aftertext
	font-size: 26px
	font-family: BSB
	text-align: center
	text-transform: uppercase
	margin 40px 0