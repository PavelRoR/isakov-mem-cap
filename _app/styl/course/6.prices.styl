#prices
	padding 50px 0
.packet
	width 100%
	max-width 350px
	margin 0 auto
	box-shadow: 0px 4px 5px 4px rgba(25, 24, 21, 0.1);
	padding 20px 20px 30px
	&-head
		text-align: center
		&-title
			font-size: 26px
			font-family: AB
			text-transform: uppercase
			small
				font-size: 16px
				font-family: A
				text-transform: none
				display block
				line-height: 1
	&-body
		padding 10px 0 20px
		text-align: center
		min-height 242px
		&-title
			font-size: 18px
			margin-bottom: 10px
			line-height: 1.3
			span
				font-family: BSB
				display block
				margin-bottom: 5px
		&-text
			font-size: 20px
			font-family: BSB
.more-button
	display block
	font-size: 16px
	font-style: italic
	cursor pointer
	color #aaa
	opacity .7
	transition: all .3s ease
	font-family: A
	&:hover
		opacity 1
.cost
	text-align: center
	font-size: 24px
	margin-bottom: 10px
	span
		display block
		font-size: 32px
		line-height: 1.2
		font-family: BSB
		text-transform: uppercase
	&-full
		span
			text-decoration: line-through
			&.unbroken
				text-decoration: none
	&-sale
		color red
	&-today
		color green
		margin-bottom: 25px
.button-cost
	.button
		max-width: 270px;
		height: 55px;
		border-radius: 5px;
		padding: 17px 10px;
		margin 0 auto
	&:before
		content:  none
.prepayment
	text-align: center
	margin 40px 0 40px
	&-title
		font-size: 32px
		color red
		font-family: BSB
		text-transform: uppercase
	&-text
		margin 15px 0 20px
		font-size: 20px
.timer-title
	text-align: center
	font-size: 32px
	color red
	font-family: BSB
	text-transform: uppercase
.alert-danger
	color: #a94442;
	background-color: #f2dede;
	padding: 10px;
	width 100%
	max-width 360px
	margin 20px auto 0
	border: 1px solid #ebccd1;
	border-radius: 4px;
	font-size: 22px;
	text-align: center
.flip-clock-wrapper
	width: 100%
	max-width 460px
	margin-top: 30px
.flip-clock-divider .flip-clock-label
	color #000
.flip-clock-dot
	background-color: #4d67ac
.flip-clock-wrapper ul li a div div.inn
	color: #fff
	background-color: #4d67ac
	text-shadow: 2px 2px 2px rgba(#022a37,.6);