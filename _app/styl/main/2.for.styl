#for
	padding 50px 0
	.container
		background-image url('../img/images/for-img.jpg')
		background-repeat no-repeat
		background-position: top 20px right
		background-size: 555px
.for-item
	background-color rgba(255,255,255,.7)
	box-shadow: 0px 4px 5px 4px rgba(25, 24, 21, 0.1);
	width 100%
	max-width 332px
	margin 0 auto 50px
	padding 10px 15px 10px 120px
	background-repeat no-repeat
	background-position: center left 10px
	display: table
	height 130px
	&-1
		background-image url('../img/icons/for-icon-1.png')
	&-2
		background-image url('../img/icons/for-icon-2.png')
	&-3
		background-image url('../img/icons/for-icon-3.png')
	&-4
		background-image url('../img/icons/for-icon-4.png')
	&-5
		background-image url('../img/icons/for-icon-5.png')
	&-6
		background-image url('../img/icons/for-icon-6.png')
	&-7
		background-image url('../img/icons/for-icon-7.png')
	&-8
		background-image url('../img/icons/for-icon-8.png')
	&-9
		background-image url('../img/icons/for-icon-9.png')
	&-10
		background-image url('../img/icons/for-icon-10.png')
	&-text
		font-size: 20px
		line-height: 1.3
		display: table-cell
		vertical-align: middle
